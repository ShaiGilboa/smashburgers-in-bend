---
import { Image } from "astro:assets";

const { slug, title, body, img, bg, color } = Astro.props;
---

<div
  class="card"
  transition:name={`burger-${slug}`}
  style={`background-color: ${bg}; color: ${color}`}
>
  <header>
    <a href={`/burger/${slug}`}>
      <h2 transition:name={`title-${slug}`}>
        {title}
      </h2>
    </a>
    <p>
      {body}
    </p>
  </header>
  <Image
    src={img}
    alt={`Photograph of burger from ${title}`}
    class="img"
    transition:name={`burger-image-${slug}`}
  />
</div>

<style lang="scss">
  .card {
    list-style: none;
    border-radius: 7px;
    overflow: hidden;
    transition: 0.15s;
    transform-origin: top center;
    position: relative;
    padding-block-end: 300px;
    header {
      padding: 1.5rem;
      a {
        display: block;
        line-height: 1;
        color: inherit;
        text-decoration: none;
        &:hover,
        &:focus {
          text-decoration: underline overline;
          text-decoration-thickness: 5px;
          text-underline-offset: 0.5rem;
        }
      }
      p {
        opacity: 0.66;
        font-size: 1rem;
        text-wrap: balance;
      }
    }

    &:hover,
    &:focus-within {
      .img {
        width: 110%;
        object-position: right -50px bottom -40px;
      }
      h2 {
        scale: 1 0.75;
      }
    }
  }

  .img {
    transition: 0.2s;
    transform-origin: bottom right;
    -webkit-mask-image: radial-gradient(
      ellipse 105% 90% at 110% 85%,
      black 60%,
      transparent 95%
    );
    width: 120%;
    max-width: 120%;
    object-fit: cover;
    height: 300px;
    object-position: right -40px bottom -40px;
    position: absolute;
    bottom: -20px;
    right: -40px;
  }
  h2 {
    font-size: 2.5rem;
    margin: 0;
    font-variation-settings: "wdth" 200;
    transition: 0.5s;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
