---
import { Image } from "astro:assets";

const { slug, title, body, img, bg } = Astro.props;
---

<li
  class="card"
  transition:name={`burger-${slug}`}
  style={`background-color: ${bg}`}
>
  <header>
    <a href={`/burger/${slug}`}>
      <h2 transition:name={`title-${slug}`}>
        {title}
      </h2>
    </a>
    <p>
      {body}
    </p>
  </header>
  <Image
    src={img}
    alt="burger"
    class="img"
    transition:name={`burger-image-${slug}`}
  />
</li>

<style lang="scss">
  .card {
    list-style: none;
    background-color: #23262d;
    border-radius: 7px;
    overflow: hidden;

    h2 {
      font-weight: 500;
      color: white;
      font-size: 3rem;
    }
    header {
      padding: 1rem;
      a {
        text-decoration: none;
      }
    }

    &:hover,
    &:focus-within {
      .img {
        width: 130%;
        max-width: 130%;
        object-position: right -20px bottom -50px;
      }
    }
  }

  .img {
    transition: 0.2s;
    -webkit-mask-image: radial-gradient(
      ellipse 105% 90% at 110% 85%,
      black 60%,
      transparent 95%
    );
    width: 120%;
    max-width: 120%;
    object-fit: cover;
    height: 300px;
    object-position: right -40px bottom -50px;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
